{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-if-needed",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$tsc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "npm-lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": ["$eslint-stylish"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "pre-launch-tasks",
            "dependsOn": ["build-if-needed", "npm-lint"],
            "dependsOrder": "sequence",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}